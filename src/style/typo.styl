/*
  Allgemeine Schriftgrößen und -styles
*/
body
  font-size 1.15em
  line-height 1.65
  color textColor
  font-family Lato, Arial, sans-serif


/*
  Icons
*/
@import "lib/iconic_stroke"
@import "lib/justvectorv2"
.iconic, .justvector
  font-weight normal !important
  margin-right 0.3em


/*
  Icons für die Revisions-Zwischenheadlines
*/
.revision > h3:before
  @extends .iconic
  margin-right 0.75em
.revision > h3:nth-last-of-type(3):before
  @extends .bolt:before
.revision > h3:nth-last-of-type(2):before
  @extends .headphones:before
.revision > h3:nth-last-of-type(1):before
  @extends .list:before



/*
  Links
*/
linkBackgroundInactive = transparent
a
  font-weight bold
  border-radius 0.2em
  padding 1px 2px
  text-decoration none
  &:link
    color linkColor
    background linkBackgroundInactive
  &:visited
    color visitedColor
    background linkBackgroundInactive
  &:hover
    color #FFF
    background linkColor
  &:active
    color red
    background linkBackgroundInactive
  &:focus
    color #FFF
    background red


/*
  Forms
*/
form
  clearfix()
p.short, p.submit
  width 48%
  float left
p.submit
  float right
p.short + p.short
  float right
label
  display block
input, textarea
  font-size inherit
  font-style inherit
  width 100%
  boxstyle()
  border 1px solid rgba(boxTextColor, 0.25)
  padding 0.75em 0.5em
  transition all 500ms
  &:hover
    border 1px solid rgba(boxTextColor, 0.5)
    background #FFF
    color textColor
  &:focus
    outline none
    border 1px solid linkColor
    background #FFF
    color #000
input[type=submit]
  font-weight bold
  cursor pointer
  color #FFF
  background linkColor
  border none


/*
  Nav
*/
nav
  font-size 1.1em
  li a
    margin 0.25em 0
    &:link, &:visited
      color linkColor
      background darken(boxBackground, 5)
    &:hover, &:active
      color #FFF
      background linkColor
  li.active a
    &:link, &:visited
      color textColor
      background transparent
    &:hover, &:active
      color linkColor
      background transparent




/*
  (Text-)Headlines
*/
h2
  clear both
  font-size 1.6em
  line-height 1.3
  margin 1.5em 0
h3
  font-size 1.2em
  font-weight bold
  margin 1.25em 0 0.75em 0
h4
  font-weight bold
  margin 2em 0 0.75em 0


/*
  Textcontainer
*/
p, ul, ol, dl
  margin 1em 0
dt
  font-weight bold
dd
  padding-left 1.5em
  margin-bottom 0.25em
dd + dt
  margin-top 0.75em
.revision
  ul
    list-style square
    padding-left 0.5em
  ol
    list-style decimal
    padding-left 0.5em


/*
  Inline-Elemente
*/
b, strong
  font-weight bold
i, em
  font-style italic